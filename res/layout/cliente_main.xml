<?xml version="1.0" encoding="utf-8"?>  
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
   android:id="@+id/RelativeLayout1"  
   android:layout_width="match_parent"  
   android:layout_height="match_parent"  
   android:orientation="vertical" >

     <Button
         android:id="@+id/btn_cad_cli"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="14dp"
         android:layout_marginTop="14dp"
         android:text="Cadastrar" />

     <EditText
         android:id="@+id/edt_filtro_cli"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/btn_cad_cli"
         android:layout_below="@+id/btn_cad_cli"
         android:layout_marginTop="22dp"
         android:ems="10" />

     <ListView
         android:id="@+id/list_cliente"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_alignLeft="@+id/edt_filtro_cli"
         android:layout_below="@+id/edt_filtro_cli"
         android:layout_marginTop="46dp" >
     </ListView>
   
</RelativeLayout> 
 