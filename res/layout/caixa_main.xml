<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/imgbtnedtsale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView04"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/imgbtnsavecash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgbtnedtexpense"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:src="@android:drawable/ic_menu_save" />

    <ImageButton
        android:id="@+id/imgbtnclearcash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgbtnsavecash"
        android:layout_marginRight="19dp"
        android:layout_toLeftOf="@+id/imgbtnsavecash"
        android:src="@android:drawable/ic_menu_delete" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Data Caixa"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgbtnclearcash"
        android:layout_marginBottom="41dp"
        android:layout_toRightOf="@+id/TextView02"
        android:text="Saldo Final"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edttextclosingbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgbtnsavecash"
        android:layout_alignLeft="@+id/TextView05"
        android:ems="10"
        android:enabled="false"
        android:inputType="numberDecimal" />

    <ImageButton
        android:id="@+id/imgbtnopencash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView03"
        android:layout_toRightOf="@+id/imgbtnclearcash"
        android:src="@android:drawable/ic_menu_set_as" />

    <ImageButton
        android:id="@+id/imgbtnedtexpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView05"
        android:layout_alignLeft="@+id/imgbtnedtsale"
        android:layout_marginBottom="26dp"
        android:src="@android:drawable/ic_menu_edit" />

    <EditText
        android:id="@+id/edttextexpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgbtnedtexpense"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:enabled="false"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edttextexpense"
        android:layout_alignParentLeft="true"
        android:text="Despesa"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edttextsale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imgbtnedtsale"
        android:ems="10"
        android:enabled="false"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edttextsale"
        android:layout_alignParentLeft="true"
        android:text="Venda"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edttextdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView01"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/edttxtinitialbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imgbtnopencash"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edttextdate"
        android:text="Saldo Inicial"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>